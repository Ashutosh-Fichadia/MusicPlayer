<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/list"
    android:padding="10dp"
    >
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:tint="#84878A"
        android:id="@+id/btnadd"
        android:background="@drawable/btnrnd2"
        android:src="@drawable/icon_import"
        ></ImageButton>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="#9E9FA1"
        android:text="PLAYING NOW"
        ></TextView>
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:tint="#84878A"
        android:id="@+id/btnback"
        android:background="@drawable/btnrnd2"
        android:src="@drawable/icon_back"
        ></ImageButton>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/album_art"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/icon_music"
        android:layout_marginTop="50dp"
        android:transitionName="logo_image"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnadd"
        app:civ_border_color="#FF000000"
        android:background="@drawable/img"
        app:civ_border_width="2dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/relseek"
        android:id="@+id/relnm"
        android:layout_below="@id/album_art"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#9E9FA1"
            android:gravity="center"
            android:text=""
            android:textSize="24dp"
            android:id="@+id/songname"
            ></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@id/relbot"
        android:layout_marginBottom="20dp"
        android:id="@+id/relseek"
        >

        <SeekBar
            android:id="@+id/seek"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:clickable="true"
            android:layout_centerInParent="true"
            android:thumb="@drawable/seek_thumb"
            android:progressDrawable="@drawable/seek_style"></SeekBar>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/relbot"
        android:layout_marginBottom="60dp"
        >
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btnrnd"
            android:layout_alignParentLeft="true"
            android:tint="#84878A"
            android:src="@drawable/icon_prev"
            android:layout_marginLeft="30dp"
            android:id="@+id/btnprev"
            ></ImageButton>
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/btnplay"
            android:src="@drawable/icon_play"
            android:tint="#fff"
            android:id="@+id/btnplay"
            android:layout_centerInParent="true"
            ></ImageButton>
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/btnrnd"
            android:layout_centerVertical="true"
            android:tint="#84878A"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_next"
            android:id="@+id/btnnxt"
            ></ImageButton>

    </RelativeLayout>
</RelativeLayout>